{
    "python.venvPath": "~/.pyenv/versions",

    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "120"],
    "python.formatting.blackPath": "/home/marcin/.pyenv/versions/neovim3/bin/black",

    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": ["--ignore-missing-imports", "--python-version=3.10", "--exclude=tests\/.*"],

    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "/home/marcin/.pyenv/versions/neovim3/bin/flake8",
    "python.linting.flake8Args": ["--ignore=N802,E203,W503,W504", "--max-line-length=120"],

    "python.sortImports.path": "/home/marcin/.pyenv/versions/neovim3/bin/isort",
    "python.sortImports.args": ["-sp", "/home/marcin/.isort.cfg"],

    "pyright.disableDiagnostics": true,
    "python.linting.pylintEnabled": false,

    "solargraph.formatting": true,

    "diagnostic.checkCurrentLine": true,
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false,

    "coc.source.emoji.filetypes": [
        "markdown",
        "gitcommit"
    ]
}
